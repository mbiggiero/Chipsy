<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" tools:context=".Chipsy">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chipsy"
        android:id="@+id/titleText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CPU Speed"
        android:id="@+id/speedText"
        android:layout_above="@id/seekBar"
        android:layout_centerHorizontal="true"/>

    <com.mbgs.chipsy.GUI
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:id="@+id/viewGUI"
        android:layout_below="@+id/titleText"
        android:layout_marginLeft="120dp"
        android:layout_toLeftOf="@+id/view2"
        android:layout_toStartOf="@+id/view2">

    </com.mbgs.chipsy.GUI>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="45"
        android:progress="15"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButton"
        android:layout_toLeftOf="@+id/imageButton" />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="120dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:layout_above="@+id/imageButton">


        <Button
            android:text="1"
            android:id="@+id/button1"
            android:textSize="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="2"
            android:id="@+id/button2"
            android:textSize="42dp"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            android:layout_toRightOf="@+id/button1"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>


        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="4"
            android:id="@+id/button4"
            android:textSize="42dp"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            android:layout_below="@+id/button1"
            android:layout_alignParentLeft="true"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="5"
            android:id="@+id/button5"
            android:textSize="42dp"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            android:layout_below="@+id/button2"
            android:layout_toRightOf="@id/button1"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>




        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="7"
            android:id="@+id/button7"
            android:textSize="42dp"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            android:layout_below="@+id/button4"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="8"
            android:id="@+id/button8"
            android:textSize="42dp"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            android:layout_below="@+id/button4"
            android:layout_toRightOf="@+id/button7"
            android:layout_toEndOf="@+id/button7"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>



        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="A"
            android:id="@+id/buttonA"
            android:textSize="24dp"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            android:layout_below="@+id/button7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="0"
            android:id="@+id/button0"
            android:textSize="24dp"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            android:layout_alignTop="@+id/buttonA"
            android:layout_toRightOf="@+id/buttonA"
            android:layout_toEndOf="@+id/buttonA"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>



    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="120dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/view2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_above="@+id/imageButton">




        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="3"
            android:id="@+id/button3"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="42dp"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="C"
            android:id="@+id/buttonC"
            android:textSize="36dp"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            android:layout_above="@+id/button5"
            android:layout_toRightOf="@+id/button3"
            android:layout_toEndOf="@+id/button3"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>


        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="6"
            android:id="@+id/button6"
            android:textSize="42dp"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            android:layout_below="@+id/button3"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="D"
            android:id="@+id/buttonD"
            android:textSize="36dp"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            android:layout_below="@+id/button3"
            android:layout_toRightOf="@+id/button6"
            android:layout_toEndOf="@+id/button6"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>


        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="9"
            android:id="@+id/button9"
            android:textSize="42dp"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            android:layout_below="@+id/button6"
            android:layout_alignLeft="@+id/buttonB"
            android:layout_alignStart="@+id/buttonB"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="E"
            android:id="@+id/buttonE"
            android:textSize="36dp"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            android:layout_alignTop="@+id/button9"
            android:layout_toRightOf="@+id/buttonB"
            android:layout_toEndOf="@+id/buttonB"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>


        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="B"
            android:id="@+id/buttonB"
            android:textSize="24dp"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            android:layout_alignTop="@+id/button0"
            android:layout_toRightOf="@+id/button8"
            android:layout_toEndOf="@+id/button8"
            android:layout_below="@id/button9"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="F"
            android:id="@+id/buttonF"
            android:textSize="24dp"
            android:background="#35000000"
            android:textColor="#50FFFFFF"
            android:layout_alignTop="@+id/buttonB"
            android:layout_alignLeft="@+id/buttonE"
            android:layout_alignStart="@+id/buttonE"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="22%"/>


    </android.support.percent.PercentRelativeLayout>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton"
        android:src="@drawable/reload"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
