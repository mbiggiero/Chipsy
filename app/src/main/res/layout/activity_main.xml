<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Chipsy">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chipsy"
        android:id="@+id/titleText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CPU Speed"
        android:id="@+id/speedText"
        android:layout_above="@+id/seekBar"
        android:layout_centerHorizontal="true"/>

    <com.mbgs.chipsy.GUI
        android:layout_width="fill_parent"
        android:layout_height="147dp"
        android:id="@+id/viewGUI"
        android:layout_below="@+id/titleText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </com.mbgs.chipsy.GUI>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="45"
        android:progress="15"
        android:layout_gravity="center"
        android:layout_below="@id/viewGUI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/view"
        android:layout_below="@+id/seekBar">


        <Button
            android:text="1"
            android:id="@+id/button1"
            android:textSize="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="2"
            android:id="@+id/button2"
            android:textSize="42dp"
            android:layout_toLeftOf="@+id/button6"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="3"
            android:id="@+id/button3"
            android:textSize="42dp"
            android:layout_alignTop="@+id/buttonC"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="C"
            android:id="@+id/buttonC"
            android:textSize="36dp"
            android:layout_above="@+id/button5"
            android:layout_toRightOf="@+id/button3"
            android:layout_toEndOf="@+id/button3"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="4"
            android:id="@+id/button4"
            android:textSize="42dp"
            android:layout_below="@+id/button1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="5"
            android:id="@+id/button5"
            android:textSize="42dp"
            android:layout_below="@+id/button2"
            android:layout_alignLeft="@+id/button8"
            android:layout_alignStart="@+id/button8"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>


        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="6"
            android:id="@+id/button6"
            android:textSize="42dp"
            android:layout_below="@+id/button3"
            android:layout_alignLeft="@+id/button9"
            android:layout_alignStart="@+id/button9"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="D"
            android:id="@+id/buttonD"
            android:textSize="36dp"
            android:layout_below="@+id/button3"
            android:layout_toRightOf="@+id/button6"
            android:layout_toEndOf="@+id/button6"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="7"
            android:id="@+id/button7"
            android:textSize="42dp"
            android:layout_below="@+id/button4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="8"
            android:id="@+id/button8"
            android:textSize="42dp"
            android:layout_below="@+id/button4"
            android:layout_toRightOf="@+id/button7"
            android:layout_toEndOf="@+id/button7"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="9"
            android:id="@+id/button9"
            android:textSize="42dp"
            android:layout_below="@+id/button6"
            android:layout_alignLeft="@+id/buttonB"
            android:layout_alignStart="@+id/buttonB"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="E"
            android:id="@+id/buttonE"
            android:textSize="36dp"
            android:layout_alignTop="@+id/button9"
            android:layout_toRightOf="@+id/buttonB"
            android:layout_toEndOf="@+id/buttonB"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="A"
            android:id="@+id/buttonA"
            android:textSize="24dp"
            android:layout_below="@+id/button7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="0"
            android:id="@+id/button0"
            android:textSize="24dp"
            android:layout_alignTop="@+id/buttonA"
            android:layout_toRightOf="@+id/buttonA"
            android:layout_toEndOf="@+id/buttonA"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="B"
            android:id="@+id/buttonB"
            android:textSize="24dp"
            android:layout_alignTop="@+id/button0"
            android:layout_toRightOf="@+id/button8"
            android:layout_toEndOf="@+id/button8"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>

        <Button
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:text="F"
            android:id="@+id/buttonF"
            android:textSize="24dp"
            android:layout_alignTop="@+id/buttonB"
            android:layout_alignLeft="@+id/buttonE"
            android:layout_alignStart="@+id/buttonE"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="25%"/>


    </android.support.percent.PercentRelativeLayout>
</RelativeLayout>
